#!/bin/bash
#SBATCH -n 256
#SBATCH -N 16
#SBATCH --tasks-per-node 16
#SBATCH -p grant
#SBATCH -A g2014a90
#SBATCH -t 96:00:00
#################################
source ~/xmipp2.rc
# Get time as a UNIX timestamp (seconds elapsed since Jan 1, 1970 0:00 UTC)
T="$(date +%s)"

###START OF USEFUL PART###
